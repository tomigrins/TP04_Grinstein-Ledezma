@{ 
    ViewData["Title"] = "Home";
}

<h1>Juego del Ahorcado</h1>

<h2>Palabra:</h2>
<p>
@for (int i = 0; i < ((string)ViewBag.palabra).Length; i++)
{
    char letra = ((string)ViewBag.palabra)[i];
    if (((List<char>)ViewBag.letrasAdivinadas).Contains(letra))
    {
        @letra
    }
    else
    {
        @Html.Raw(" ")
    }
    @Html.Raw(" ")

}
</p>

<h3>Letras Usadas:</h3>
<p>
@foreach (char l in (List<char>)ViewBag.letrasUsadas)
{
    @l @(" ")
}
</p>

<form action='@Url.Action("JugarLetra", "Home")' method="get">
    <input type="text" name="letra" maxlength="1" required />
    <input type="submit" value="Enviar" />
</form>
